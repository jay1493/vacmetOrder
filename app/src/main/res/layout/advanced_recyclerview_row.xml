<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/d5"
    android:layout_marginBottom="@dimen/d20"
    android:elevation="@dimen/d50"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_uploadInvoiceAdmin"
            android:background="@color/grey"
            android:elevation="@dimen/d5"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/tv_uploadInvoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10"
                    android:drawableLeft="@drawable/upload_pdf_drawable"
                    android:drawablePadding="@dimen/d5"
                    android:textStyle="bold"
                    android:text="@string/upload_invoices"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_customerPiDetails"
            android:visibility="gone"
            android:background="@color/grey"
            android:elevation="@dimen/d5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/charcoal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:id="@+id/ll_buyerPINo"
                        android:gravity="start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/buyer_p_i_no"
                            android:textStyle="bold"
                            android:padding="@dimen/d5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text=""
                            android:maxLines="2"
                            android:textSize="@dimen/d12sp"
                            android:id="@+id/customerPi_piNo"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:id="@+id/ll_partyPINo"
                        android:gravity="start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/p_i_no"
                            android:textStyle="bold"
                            android:padding="@dimen/d5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text=""
                            android:maxLines="2"
                            android:textSize="@dimen/d12sp"
                            android:id="@+id/partyPi_piNo"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:id="@+id/ll_buyerPIDate"
                        android:gravity="start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/buyer_p_i_date"
                            android:textStyle="bold"
                            android:padding="@dimen/d5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text=""
                            android:maxLines="2"
                            android:textSize="@dimen/d12sp"
                            android:id="@+id/customerPi_piDate"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:id="@+id/ll_partyPIDate"
                        android:gravity="start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/p_i_date"
                            android:textStyle="bold"
                            android:padding="@dimen/d5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text=""
                            android:maxLines="2"
                            android:textSize="@dimen/d12sp"
                            android:id="@+id/partyPi_piDate"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_piETA">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pi_eta"
                        android:padding="@dimen/d5"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d5"
                        android:textSize="@dimen/d12sp"
                        android:id="@+id/pi_eta"
                        android:textColor="@color/red_transperant"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:id="@+id/ll_orderStatus">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9">
                <RelativeLayout
                    android:id="@+id/rlCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_invoiceNo"
                        android:padding="@dimen/d5"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text="@string/invoice_no"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvInvoiceNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"

                            android:textColor="#003C71"/>
                        <ImageView
                            android:id="@+id/open_invoice_pdf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/d5"
                            android:paddingRight="@dimen/d5"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/open_pdf"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/partyName"
                        android:gravity="right"
                        android:padding="@dimen/d10"
                        android:text="Party Name"
                        android:layout_below="@id/ll_invoiceNo"
                        android:textStyle="bold"
                        android:textColor="#FF0000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_OrderNo"
                        android:padding="@dimen/d5"
                        android:orientation="horizontal"
                        android:layout_below="@id/partyName">
                        <TextView
                            android:id="@+id/tvOrderNoHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:text="@string/Order_No"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvOrderNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#003C71"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_qtyStatus"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_OrderNo"
                        android:weightSum="10">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:padding="@dimen/d5"
                            android:orientation="horizontal"
                            android:id="@+id/ll_orderQty">
                            <TextView
                                android:id="@+id/tvOrderQtyHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/d5"
                                android:text="@string/Order_Qty"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvOrderQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:singleLine="false"
                                android:maxLines="2"
                                android:textColor="#003C71"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:padding="@dimen/d5"
                            android:orientation="horizontal"
                            android:id="@+id/ll_despQty">
                            <TextView
                                android:id="@+id/tvOrderDespQtyHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/d5"
                                android:text="@string/Order_Desp_Qty"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvOrderDespQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="#003C71"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_qtyStatus"
                        android:orientation="vertical"
                        android:id="@+id/ll_dateStatus">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d5"
                            android:id="@+id/ll_OrderDate"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tvOrderDateHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/d5"
                                android:text="@string/Order_Date"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tvOrderDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="#003C71"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/d5"
                            android:id="@+id/ll_destDate"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/tvETDHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/d5"
                                android:text="@string/ETD"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="8"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/deliveryDate"
                                    android:padding="@dimen/d5"
                                    android:textSize="@dimen/d12sp"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#FF0000"/>
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/show_prev_dates"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerInside"
                                    android:padding="@dimen/d5"
                                    android:id="@+id/prevModifiedDates"
                                    android:visibility="gone"/>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>





                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_24dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_adminNotes"
            android:visibility="gone"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/charcoal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_adminNotes"
                android:padding="@dimen/d5"
                android:ellipsize="marquee"
                android:textColor="@color/red_transperant"
                android:text=""
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/mainLogistics"
            android:padding="@dimen/d5"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/charcoal"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollIndicators="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_logistics"
                    android:orientation="horizontal"
                    android:padding="@dimen/d10"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logistics_details"
                        android:id="@+id/tv_headerLogistics"
                        android:padding="@dimen/d5"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_logistics"
                        android:padding="@dimen/d5"
                        android:ellipsize="marquee"
                        android:textColor="@color/red_transperant"
                        android:text=""
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>