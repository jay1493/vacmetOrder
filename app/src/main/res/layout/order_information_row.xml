<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout_order_info"
    android:weightSum="9"
    android:padding="@dimen/d10">
    <TextView
        android:id="@+id/orderInfo_itemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_gravity="left"
        android:maxLines="5"
        android:textColor="#003C71"
        android:layout_weight="7"
        android:textStyle="bold"
        android:text="Item 1"/>
    <TextView
        android:id="@+id/orderInfo_itemQtyStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textStyle="bold"
        android:textColor="#003C71"
        android:singleLine="false"
        android:gravity="right"
        android:layout_gravity="right"
        android:paddingRight="@dimen/d5"
        android:maxLines="2"
        android:text="30/30"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expanded_item_details"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/d5"
        android:padding="@dimen/d10"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_detailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/item_details"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:padding="@dimen/d5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d5">
            <TextView
                android:id="@+id/txt_materialNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/material_no"
                android:layout_gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_toLeftOf="@+id/txt_detailsStatus"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/txt_detailsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/status_not_known"
                android:gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d5"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_no"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsBillNo"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_date"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsBillDate"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d5"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="@string/item_length"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsLength"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:text="0.00"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/item_width"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsWidth"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="0.00"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_treatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d5"
            android:weightSum="10"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="@string/item_treatment1"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsTreatment1"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0.00"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="@string/item_treatment2"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsTreatment2"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0.00"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_other_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d5"
            android:weightSum="10"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="@string/item_container_no"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsContainerNo"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="0"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="@string/item_shades"
                    android:textColor="#003C71" />
                <TextView
                    android:id="@+id/txt_detailsShades"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:text="None"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>